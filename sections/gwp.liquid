      "type": "header",
      "content": "Popup Trigger"
    },
    {
      "type": "range",
      "id": "price_trigger",
      "min": 0,
      "max": 500,
      "step": 5,
      "unit": "₱",
      "label": "Price",
      "default": 0,
      "info": "The store currency applies. If the value is 0 the popup is disabled."
