    {
      "type": "header",
      "content": "Popup settings"
    },
    {
      "type": "checkbox",
      "id": "confetti",
      "label": "Show confetti on button click?",
      "default": true
    },
    {
      "type": "text",
      "id": "text",
      "label": "Popup Text",
